  <script>


    document.addEventListener('DOMconteudoLoaded', function() {
      const perguntas = document.querySelectorAll('.faq-pergunta');
      
      perguntas.forEach(pergunta => {
        pergunta.addEventListener('click', function() {
          const conteudo = this.nextElementSibling;
          const isExpanded = this.getAttribute('aria-expanded') === 'true';
          
          perguntas.forEach(otherpergunta => {
            if (otherpergunta !== this) {
              otherpergunta.setAttribute('aria-expanded', 'false');
              otherpergunta.nextElementSibling.style.maxHeight = '0';
              otherpergunta.nextElementSibling.style.padding = '0 25px';
            }
          });
          
          this.setAttribute('aria-expanded', !isExpanded);
          if (!isExpanded) {
            conteudo.style.maxHeight = conteudo.scrollHeight + 'px';
            conteudo.style.padding = '0 25px 20px';
          } else {
            conteudo.style.maxHeight = '0';
            conteudo.style.padding = '0 25px';
          }
        });
      });
    });
  </script>
